<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gymbro.window.fxml.FavoritesMenuFxmlController"
      prefHeight="960.0" prefWidth="840.0"
>

    <ImageView fx:id="logo"></ImageView>

    <VBox alignment="CENTER"
          prefHeight="960.0" prefWidth="840.0"
          spacing="20"
    >

        <fx:define>
            <Font fx:id="buttonFont" name="Consolas" size="25" />
        </fx:define>

        <Button id="start" onAction="#favoritesMap" text="Show favorites" minWidth="225" minHeight="50" font="$buttonFont"/>
        <Button id="save" onAction="#saveFavorites" text="Save favorites" minWidth="225" minHeight="50" font="$buttonFont"/>
        <Button id="back" onAction="#backToMainMenu" text="Back" minWidth="225" minHeight="50" font="$buttonFont"/>


    </VBox>
</Pane>
